# Server Configuration
NODE_ENV=production
PORT=3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info

# Todoist Defaults
DEFAULT_PROJECT_NAME=Inbox
DEFAULT_PRIORITY=2
DEFAULT_MAIN_TASK_PREFIX=Claude Actions

# Security (for reverse proxy)
TRUSTED_PROXIES=172.18.0.0/16,10.0.0.0/8,127.0.0.1

# Health Check
HEALTH_CHECK_TIMEOUT=5000